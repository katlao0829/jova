= render "./header"
.AccountPage
  .AccountPage__title
    %h2 新規アカウントの作成
    = render "devise/shared/links"
  .AccountPage__form
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .FormField
        .FormField__label--normal
          = f.label "◉お名前(フルネーム)"
        .FormField__input--normal
          = f.text_field :name, class: "form-a", placeholder: "例) 加藤友章", autofocus: true
      .FormField
        .FormField__label--normal
          = f.label "◉メールアドレス"
        .FormField__input--normal
          = f.email_field :email, class: "form-a", placeholder: "例) sample@samle.com"
      .FormField
        .FormField__label--normal
          = f.label "◉パスワード"
          %i (英数字8文字以上)
        .FormField__input--normal
          = f.password_field :password, class: "form-a", placeholder: "例) aaaaaaaa", autocomplete: "off"
      .FormField
        .FormField__label--normal
          = f.label "◉パスワード(再入力)"
        .FormField__input--normal
          = f.password_field :password_confirmation, class: "form-a", placeholder: "もう一度入力してください", autocomplete: "off"
      .FormField
        .FormField__label--normal
          = f.label "◉派遣国"
        .FormField__input--normal
          = f.text_field :country, class: "form-a", placeholder: "例) ラオス"
      .FormField
        .FormField__label--normal
          = f.label "◉職種"
        .FormField__input--normal
          = f.text_field :job, class: "form-a", placeholder: "例) コミュニティ開発"
      .FormField
        .FormField__label--normal
          = f.label "◉派遣隊次"
        .FormField__input--normal
          = f.text_field :term, class: "form-a", placeholder: "例) 2018年度1次隊 or H30年度1次隊"
      .FormField
        .FormField__label--normal
          = f.label "◉自己紹介"
        .FormField__input--normal
          = f.text_area :introduction, class: "form-b", placeholder: "これまでの経歴や現在のお仕事などなんでも"
      .FormField
        .FormField__label--normal
          = f.label "◉プロフィール画像"
        .FormField__input--normal
          = f.label :image do
            = icon('fas', 'portrait', class: "photo")
            = f.file_field :image, class: "hidden"
      .actions
        = f.submit "アカウントを作成", class: 'Button UserButton'
